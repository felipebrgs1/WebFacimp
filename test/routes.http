<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Inicial</title>
    <style>
        /* Estilo do botão */
        .btn-detalhes {
            display: inline-block;
            background-color: #007BFF;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-detalhes:hover {
            background-color: #0056b3;
        }

        /* Estilo do modal */
        .modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            display: none; /* Oculta o modal por padrão */
        }

        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 10px;
            width: 400px;
            text-align: center;
            position: relative;
        }

        #fechar-modal {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 20px;
            font-weight: bold;
            color: #333;
            cursor: pointer;
        }

        #fechar-modal:hover {
            color: red;
        }
    </style>
</head>

<body>
    <main id="main-home">
        <!-- Apresentação de comércios -->
        <section id="cont-bloco-com"> <!-- Conteiner -->
        </section>

        <!-- Modal de detalhes -->
        <div id="modal-detalhes" class="modal">
            <div class="modal-content">
                <span id="fechar-modal">&times;</span>
                <h2 id="detalhes-nome"></h2>
                <p id="detalhes-local"></p>
                <p id="detalhes-categoria"></p>
                <p id="detalhes-descricao"></p>
            </div>
        </div>
    </main>

    <script>
        let estabelecimentos = [];

        async function carregarEstabelecimentos() {
            try {
                const response = await fetch("http://localhost:5000/api/estabelecimentos");
                if (!response.ok) throw new Error("Erro ao buscar dados da API");

                estabelecimentos = await response.json();
                exibirEstabelecimentos(estabelecimentos);
            } catch (error) {
                console.error("Erro ao carregar estabelecimentos:", error);
            }
        }

        function exibirEstabelecimentos(lista) {
            const container = document.getElementById("cont-bloco-com");
            container.innerHTML = "";

            lista.forEach(estabelecimento => {
                const section = document.createElement("section");
                section.className = "bloco-com";

                section.innerHTML = `
                    <h2>${estabelecimento.name}</h2>
                    <p>Local: ${estabelecimento.rua}</p>
                    <p>Categoria: ${estabelecimento.category}</p>
                    <button class="btn-detalhes" onclick="mostrarDetalhes('${estabelecimento.id}')">Detalhes</button>
                `;

                container.appendChild(section);
            });
        }

        function mostrarDetalhes(id) {
            const estabelecimento = estabelecimentos.find(est => est.id === id);
            if (estabelecimento) {
                document.getElementById("detalhes-nome").innerText = estabelecimento.name;
                document.getElementById("detalhes-local").innerText = `Local: ${estabelecimento.rua}`;
                document.getElementById("detalhes-categoria").innerText = `Categoria: ${estabelecimento.category}`;
                document.getElementById("detalhes-descricao").innerText = estabelecimento.description || "Descrição não disponível.";

                // Exibe o modal
                const modal = document.getElementById("modal-detalhes");
                modal.style.display = "flex";
            } else {
                console.error(`Estabelecimento com ID ${id} não encontrado`);
            }
        }

        // Fechar modal
        document.getElementById("fechar-modal").addEventListener("click", () => {
            document.getElementById("modal-detalhes").style.display = "none";
        });

        // Carrega os estabelecimentos ao carregar a página
        document.addEventListener("DOMContentLoaded", carregarEstabelecimentos);
    </script>
</body>

</html>
